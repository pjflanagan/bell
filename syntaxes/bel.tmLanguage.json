{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bell",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#support"
		},
		{
			"include": "#variable"
		}
	],
	"repository": {
		"support": {
			"patterns": [
				{
					"name": "support.function",
					"match": "^(log|write)\\b"
				},
				{
					"name": "support.function",
					"match": "\\b(input)\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.bel",
					"match": "^(GET|POST|PUT|DELETE|OPTIONS)$"
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment.block",
					"begin": "###\n",
					"end": "###\n"
				},
				{
					"name": "comment.line.number-sign",
					"begin": "#",
					"end": "\n"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.bel",
					"begin": "\"",
					"end": "\""
				},
				{
					"name": "constant.character.escape.bel",
					"match": "\\\\."
				},
				{
					"name": "string.unquoted",
					"match": "^[url|domain|path] (.*)$"
				}
			]
		},
		"variable": {
			"patterns": [
				{
					"name": "variable.language",
					"match": "\\b(url|domain|subdomain|path|header|body|response|param|params)\\b"
				},
				{
					"name": "variable.other",
					"match": "\\b([[a-zA-Z0-9_]]*)\\b"
				}
			]
		}
	},
	"scopeName": "source.bel"
}