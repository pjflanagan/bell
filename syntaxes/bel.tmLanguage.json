{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bell",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#constant"
		},
		{
			"include": "#storage"
		}
	],
	"repository": {
		"storage": {
			"patterns": [
				{
					"name": "storage.type",
					"match": "^(url|domain|path|log|write|header|body)\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.bel",
					"match": "^(GET|POST|PUT|DELETE|OPTIONS)$"
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment.line.number-sign",
					"begin": "#",
					"end": "\n"
				},
				{
					"comment": "TODO: fix this",
					"name": "comment.block",
					"begin": "###\n",
					"end": "###\n"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.bel",
					"begin": "\"",
					"end": "\""
				},
				{
					"name": "constant.character.escape.bel",
					"match": "\\\\."
				},
				{
					"name": "string.unquoted",
					"match": "^[url|domain|path] (.*)$"
				}
			]
		},
		"constant": {
			"patterns": [
				{
					"name": "constant.language",
					"match": "\\b(response)\\b"
				}
			]
		}
	},
	"scopeName": "source.bel"
}