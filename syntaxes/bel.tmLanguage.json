{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bell",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#support"
		},
		{
			"include": "#variable"
		}
	],
	"repository": {
		"support": {
			"patterns": [
				{
					"name": "support.function",
					"match": "^(log|write|validate|expect|wait)\\b"
				},
				{
					"name": "support.function",
					"match": "\\b(input)\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.bel",
					"match": "^(GET|POST|PUT|DELETE|OPTIONS)$"
				},
				{
					"name": "keyword.control.bel",
					"match": "^(import|export|require|request|env)\\b"
				},
				{
					"name": "keyword.control.bel",
					"match": " (from|as|warn) "
				},
				{
					"name": "keyword.operator.bel",
					"match": "\\b=|:\\b"
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment.block",
					"begin": "###\n",
					"end": "###\n"
				},
				{
					"name": "comment.line.number-sign",
					"begin": "#",
					"end": "\n"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.bel",
					"begin": "\"",
					"end": "\""
				},
				{
					"name": "string.quoted.single",
					"begin": "'",
					"end": "'"
				},
				{
					"name": "string.quoted.other",
					"begin": "`",
					"end": "`"
				},
				{
					"name": "constant.character.escape.bel",
					"match": "\\\\."
				},
				{
					"name": "constant.numeric",
					"match": "\\b[0-9]+\\b"
				}
			]
		},
		"variable": {
			"patterns": [
				{
					"name": "variable.language",
					"match": "\\b(url|scheme|subdomain|domain|topLevelDomain|port|path|param|params|fragment|header|body|timeout)\\b"
				},
				{
					"name": "variable.language",
					"match": "\\b(response)\\b"
				},
				{
					"name": "variable.other",
					"match": "\\b([a-zA-Z][a-zA-Z0-9_]+)\\b"
				}
			]
		}
	},
	"scopeName": "source.bel"
}